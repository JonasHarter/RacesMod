package Stonegaze
	import Cuff
	import Basics2

	init
		Stonegaze x = new Stonegaze()
		x.addBuff('B01E')
		x.addAbility(INVULNERABILITY)

	class Stonegaze extends Cuff
			
		override function apply(unit target, integer level)
			target.setVertexColor(255, 120, 120, 120)

		override function clean(unit target, integer level)
			target.setVertexColor(255, 255, 255, 255)