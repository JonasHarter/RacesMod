package KnowledgeAura
	import Cuff
	import ModMax

	init
		KnowledgeAura x = new KnowledgeAura()
		x.addBuff('B012') 
		x.addBuff('B013') 
		x.addBuff('B014')

	function mana(int level) returns int
		return level * 50

	class KnowledgeAura extends Cuff
			
		override function apply(unit target, integer level)
			target.modMaxMana(mana(level), true)

		override function clean(unit target, integer level)
			target.modMaxMana(-1 * mana(level), true)