package Snakeskin
	import Cuff
	import ModMax

	let AMOUNT = 100

	init
		Snakeskin x = new Snakeskin()
		x.addBuff('B01F')

	class Snakeskin extends Cuff
			
		override function apply(unit target, integer level)
			target.modMaxHP(AMOUNT, false)

		override function clean(unit target, integer level)
			target.modMaxHP(-1 * AMOUNT, false)